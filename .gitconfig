[url "git@github.com:"]
  insteadOf = "https://github.com/"
  insteadOf = "http://github.com/"
  insteadOf = "gh:"

[url "git@github.com:serginator/"]
  insteadOf = "gs:"

[url "http://github.com/serginator/"]
  insteadOf = "gs:"

[push]
  default = current

[color]
  ui = true

[hub]
  host = pdihub.hi.inet
